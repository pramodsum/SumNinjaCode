.blog-post
  h1.blog-post-title.text-center
    |{&nbsp;
    a(href=post.url)
      = post.title
    |&nbsp;}
  p.blog-post-meta #{post.date.getMonth()+1}.#{post.date.getDate()}.#{post.date.getFullYear()}
  p
    != post.preview
  .tags
    ul
      - each tag in post.tags
        li
          a(href=tagUrl(tag))
              span.label.label-info.label-tag #{tag}
